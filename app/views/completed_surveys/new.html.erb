<h1><%= @survey.assessment.title %></h1>
<body>
<div class="picture" style="background-image: url(https://source.unsplash.com/5d2ETacuSgw/1600x900)"></div>
<div class="overlay-bottom"></div>
<div class="overlay-top"></div>

<h1><%= @survey.heading %></h1>
<h2><%= @survey.intro %></h1>

<%= form_for @completed_survey do |form| %>
  <br />
  <!-- Form field to allow user to answer question -->
  <%= form.fields_for :evaluations do |evaluation_form| %>

    <%= evaluation_form.object.question.body %>

    <%= evaluation_form.hidden_field :question_id, value: evaluation_form.object.question.id %>

    <div class="eval-button">
      <%= evaluation_form.radio_button :answer, 1.0 %>
      <%= evaluation_form.label :answer, "1", value: 1.0, class: "button-group-item" %>
      <span class="radio_span"></span>
      <%= evaluation_form.radio_button :answer, 2.0 %>
      <%= evaluation_form.label :answer, "2", value: 2.0, class: "button-group-item" %>
      <span class="radio_span"></span>
      <%= evaluation_form.radio_button :answer, 3.0 %>
      <%= evaluation_form.label :answer, "3", value: 3.0, class: "button-group-item" %>
      <span class="radio_span"></span>
      <%= evaluation_form.radio_button :answer, 4.0 %>
      <%= evaluation_form.label :answer, "4", value: 4.0, class: "button-group-item" %>
      <span class="radio_span"></span>
      <%= evaluation_form.radio_button :answer, 5.0 %>
      <%= evaluation_form.label :answer, "5", value: 5.0, class: "button-group-item" %>
    </div>
  <% end %>

  <!-- Submit the form -->
  <%= form.submit "Submit" %>
<% end %>
</body>
